{
  "name": "ai-codyy",
  "displayName": "Coddy - Typing Streak Tracker",
  "description": "A productivity extension for maintaining typing streaks in VSCode with animated indicators",
  "version": "0.0.3",
  "publisher": "sandeep-sarkar",
  "icon": "imges/icon_type_2.png",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "productivity",
    "typing",
    "streak",
    "motivation",
    "coding",
    "status-bar"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "typingStreak.toggle",
        "title": "Toggle Typing Streak"
      }
    ],
    "configuration": {
      "title": "Typing Streak",
      "properties": {
        "typingStreak.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable typing streak indicator"
        },
        "typingStreak.streakThreshold": {
          "type": "number",
          "default": 5,
          "description": "Characters per second to maintain streak"
        },
        "typingStreak.resetDelay": {
          "type": "number",
          "default": 3000,
          "description": "Milliseconds of inactivity before resetting streak"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.103.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "esbuild": "^0.25.8",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }

  ,
  "repository": {
    "type": "git",
    "url": "https://github.com/sandy4242/ai-codyy#"
  }
}
